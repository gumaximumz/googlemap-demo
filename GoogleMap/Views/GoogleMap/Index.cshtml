
@{
    ViewBag.Title = "Index";
}
<meta name="viewport" content="initial-scale=1.0, user-scalable=no">
<meta charset="utf-8">
<div class="row">
    <table id="datatable_demo" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th rowspan="2">Name</th>
                <th colspan="4">Rectangle</th>
                <th colspan="3">Circle</th>
                <th colspan="2">Polygon</th>
            </tr>
            <tr>
                <th>north</th>
                <th>south</th>
                <th>east</th>
                <th>west</th>
                <th>center-lat</th>
                <th>center-lng</th>
                <th>radius</th>
                <th>lat-list</th>
                <th>lng-list</th>
            </tr>
        </thead>
    </table>
</div>
<div class="row">
    <div id="map"></div>
    <input type="button" id="Create" value="Drawing" />
    <input type="button" id="Clear" value="Clear" />
    <input type="button" id="Circle" value="วงกลม" />
    <input type="button" id="Polygon" value="โพลิก้อน" />
    <input type="button" id="Rectangle" value="สีเหลี่ยม" />

</div>
@section css{
    @Styles.Render("~/Content/DataTables/css")
}

@section scripts{
    @*<script src="@Url.Content("~/Scripts/googleMap/map.js")"></script>*@
    @Scripts.Render("~/bundles/googleMap")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/DataTables")

    <script type="text/javascript">
        let demo = null;
        $(document).ready(() => {
            demo = new DatatableDemo();
            demo.init();
        })
        function initMap() {
            let map = new Map();
            map.getPointUrl = '@Url.Action("GetPoint")';
            map.getPolygonUrl = '@Url.Action("GetPolygon")';
            map.getStationUrl = '@Url.Action("GetStation")';
            map.savePolygonUrl = '@Url.Action("SavePolygon")';
            map.saveCircleUrl = '@Url.Action("SaveCircle")';
            map.getCircleUrl = '@Url.Action("getCircle")';
            map.saveRectangleUrl = '@Url.Action("SaveRectangle")';
            map.getRectangleUrl = '@Url.Action("GetRectangle")';
            map.clear = '@Url.Action("SesionClear")';
            map.init();
        }
        

    </script>


    <script src="http://maps.google.com/maps/api/js?sensor=false&libraries=drawing&callback=initMap" async defer></script>
}
